		        </fieldset>
			<fieldset name="options">
				<field 
		                    name="google_analytics" 
		                    class="" 
		                    type="text" 
		                    label="TPL_INTRAKIT_GOOGLE_ANALYTICS_LABEL" 
		                    description="TPL_INTRAKIT_GOOGLE_ANALYTICS_DESC" 
		                />
		               <field 
		                    name="facebook_page" 
		                    class="" 
		                    type="url" 
		                    label="TPL_INTRAKIT_FACEBOOK_PAGE_LABEL" 
		                    description="TPL_INTRAKIT_FACEBOOK_PAGE_DESC" 
		                />
		                <field 
		                    name="twitter_page" 
		                    class="" 
		                    type="text" 
		                    label="TPL_INTRAKIT_TWITTER_PAGE_LABEL" 
		                    description="TPL_INTRAKIT_TWITTER_PAGE_DESC" 
		                />
		                <field 
		                    name="pinterest_page" 
		                    class="" 
		                    type="url" 
		                    label="TPL_INTRAKIT_PINTEREST_PAGE_LABEL" 
		                    description="TPL_INTRAKIT_PINTEREST_PAGE_DESC" 
		                />
		                <field 
		                    name="googleplus_page" 
		                    class="" 
		                    type="url" 
		                    label="TPL_INTRAKIT_GOOGLE_PAGE_LABEL" 
		                    description="TPL_INTRAKIT_GOOGLE_PAGE_DESC" 
		                />
		                <field 
		                    name="linkedin_page" 
		                    class="" 
		                    type="url" 
		                    label="TPL_INTRAKIT_LINKEDIN_PAGE_LABEL" 
		                    description="TPL_INTRAKIT_LINKEDIN_PAGE_DESC" 
		                />
               			<field name="popup_pinterest"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_INTRAKIT_PINTEREST_SHARE_LABEL"
					description="TPL_INTRAKIT_PINTEREST_SHARE_DESC"
