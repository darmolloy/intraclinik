	<config>
		<fields name="params">
			<fieldset name="basic">
		               <field name="core_css" type="filelist" default="uikit.min.css" label="Core CSS File" description="" directory="templates/intrakit/uikit/dist/css" filter="" exclude="" stripext="" />
		               <field 
		                    name="company_name" 
		                    class="" 
		                    type="text" 
		                    label="TPL_INTRAKIT_COMPANY_NAME_LABEL" 
		                    description="TPL_INTRAKIT_COMPANY_NAME_DESC" 
		               />
		               <field 
		                    name="company_address" 
		                    class="" 
		                    type="textarea" 
		                    label="TPL_INTRAKIT_COMPANY_ADDRESS_LABEL" 
		                    description="TPL_INTRAKIT_COMPANY_ADDRESS_DESC" 
		               />
		               <field 
		                    name="company_phone" 
		                    class=""
		                    type="text" 
		                    label="TPL_INTRAKIT_COMPANY_PHONE_LABEL" 
		                    description="TPL_INTRAKIT_COMPANY_PHONE_DESC" 
		               />
		               <field 
		                    name="company_email" 
		                    class=""
		                    type="email" 
		                    label="TPL_INTRAKIT_COMPANY_EMAIL_LABEL" 
		                    description="TPL_INTRAKIT_COMPANY_EMAIL_DESC" 
		               />
		               <field 
		                    name="paypal_email" 
		                    class="" 
		                    type="email" 
		                    label="TPL_INTRAKIT_PAYPAL_EMAIL_LABEL" 
		                    description="TPL_INTRAKIT_PAYPAL_EMAIL_DESC" 
		               />
